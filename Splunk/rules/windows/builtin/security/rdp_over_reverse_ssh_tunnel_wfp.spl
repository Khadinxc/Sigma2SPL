EventID=5156 (DestAddress IN ("127.*", "::1") SourcePort=3389) OR (DestPort=3389 SourceAddress IN ("127.*", "::1")) NOT (FilterOrigin="AppContainer Loopback" OR Application IN ("*\\thor.exe", "*\\thor64.exe"))