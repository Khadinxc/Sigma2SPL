Image="*\\powercfg.exe" OR OriginalFileName="PowerCfg.exe" (CommandLine="*/setacvalueindex *" CommandLine="*SCHEME_CURRENT*" CommandLine="*SUB_VIDEO*" CommandLine="*VIDEOCONLOCK*") OR (CommandLine="*-change *" CommandLine="*-standby-timeout-*")